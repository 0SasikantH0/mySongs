<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:scrollbars="none"
    tools:context="mysongs.com.allgo.mysongs.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topnavigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#cfcfcf">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="11dp"
                android:src="@drawable/mainlogo" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@+id/topnavigation"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewpager"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Telugu"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic" />
        <RelativeLayout
            android:id="@+id/appLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/head1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hscroll1"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingTop="40dp"
                    android:layout_height="150dp"
                    android:id="@+id/linearlayer1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/bTwine"
                        android:padding="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="60dp"
                        android:clickable="true" />

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/appLayout1"
            android:background="#801717"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/test1"
            android:background="#000000"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/test3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/test2"
            android:background="#801715"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/test4"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/test3"
            android:background="#ffffff"></RelativeLayout>
    </RelativeLayout>
</ScrollView>